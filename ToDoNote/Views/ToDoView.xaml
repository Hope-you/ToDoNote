<UserControl x:Class="ToDoNote.Views.ToDoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:ToDoNote.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <md:DialogHost>
        <md:DrawerHost IsLeftDrawerOpen="{Binding IsLeftDrawerOpen}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel  MinWidth="300"
                            LastChildFill="False"
                            Background="Red">
                    <TextBlock Text="添加待办"
                               FontSize="20"
                               FontWeight="Bold"
                               DockPanel.Dock="Top" />
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Top">
                        <TextBlock Text="状态：" />
                        <ComboBox>
                            <ComboBoxItem>待办</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBox md:HintAssist.Hint="请输入待办概要"
                             DockPanel.Dock="Top" />
                    <TextBox md:HintAssist.Hint="请输入待办内容"
                             DockPanel.Dock="Top" />
                    <Button Content="添加到待办"
                            DockPanel.Dock="Top" />
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            Margin="15 0 0 0">
                    <TextBox Width="220"
                             Margin="20"
                             FontSize="20"
                             md:HintAssist.Hint="查找待办事项..."
                             md:HintAssist.HintOpacity="0.8"
                             md:TextFieldAssist.HasClearButton="True" />
                    <TextBlock Text="筛选"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Margin="0 0 15 0" />
                    <ComboBox FontSize="20"
                              SelectedIndex="0">
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>待办</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Content="+ 添加待办"
                        Margin="0 0 20 0"
                        Command="{Binding AddToDoCommand}" />

                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding ToDoDtos}"
                              HorizontalAlignment="Center">
                    <!--定义结构-->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!--定义数据模板-->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="200"
                                  MinHeight="180"
                                  MaxHeight="250"
                                  Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Background="#11b038"
                                        Grid.RowSpan="2"
                                        CornerRadius="5" />
                                <TextBlock Text="{Binding Title}"
                                           Margin="10"
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding Content}"
                                           Margin="10 0 0 0"
                                           Grid.Row="1" />
                                <Canvas ClipToBounds="True"
                                        Grid.RowSpan="2">
                                    <Border Canvas.Top="10"
                                            Canvas.Right="-50"
                                            Width="120"
                                            Height="120"
                                            Background="#ffffff"
                                            CornerRadius="100"
                                            Opacity="0.1" />
                                    <Border Canvas.Top="80"
                                            Canvas.Right="-30"
                                            CornerRadius="100"
                                            Width="120"
                                            Height="120"
                                            Background="#ffffff"
                                            Opacity="0.1" />
                                </Canvas>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
